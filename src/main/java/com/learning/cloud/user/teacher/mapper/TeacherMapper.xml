<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learning.cloud.user.teacher.dao.TeacherDao">
  <resultMap id="BaseResultMap" type="com.learning.cloud.user.teacher.entity.Teacher">
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="teacher_name" jdbcType="VARCHAR" property="teacherName" />
    <result column="user_id" jdbcType="VARCHAR" property="userId" />
    <result column="campus_id" jdbcType="INTEGER" property="campusId" />
    <result column="class_ids" jdbcType="VARCHAR" property="classIds" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
  </resultMap>

  <select id="getClassTeachers" parameterType="com.learning.cloud.dept.gradeClass.entity.GradeClass" resultType="com.learning.cloud.user.teacher.entity.Teacher">
    select *
    from user_teacher
    where find_in_set(#{id},class_ids)
  </select>

  <select id="getById" parameterType="java.lang.Integer" resultType="com.learning.cloud.user.teacher.entity.Teacher">
    select *
    from user_teacher
    where id = #{id}
  </select>

  <select id="getByUserId" parameterType="java.lang.String"
          resultType="com.learning.cloud.user.teacher.entity.Teacher">
    select *
    from user_teacher
    where user_id = #{userId}
  </select>

  <select id="getClassTeacherNum" parameterType="java.lang.Integer" resultType="java.lang.Integer">
    select count(id)
    from user_teacher
    where find_in_set(#{classId},class_ids)
  </select>

  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.learning.cloud.user.teacher.entity.Teacher">
    insert into user_teacher
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="teacherName != null">
        teacher_name,
      </if>
      <if test="userId != null">
        user_id,
      </if>
      <if test="campusId != null">
        campus_id,
      </if>
      <if test="classIds != null">
        class_ids,
      </if>
      <if test="schoolId != null">
        school_id,
      </if>
      <if test="bureauId != null">
        bureau_id,
      </if>
      <if test="courseType != null">
        course_type,
      </if>
      <if test="phone != null">
        phone,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="teacherName != null">
        #{teacherName,jdbcType=VARCHAR},
      </if>
      <if test="userId != null">
        #{userId,jdbcType=VARCHAR},
      </if>
      <if test="campusId != null">
        #{campusId,jdbcType=INTEGER},
      </if>
      <if test="classIds != null">
        #{classIds,jdbcType=VARCHAR},
      </if>
      <if test="schoolId != null">
        #{schoolId,jdbcType=INTEGER},
      </if>
      <if test="bureauId != null">
        #{bureauId,jdbcType=INTEGER},
      </if>
      <if test="courseType != null">
        #{courseType,jdbcType=BIGINT},
      </if>
      <if test="phone != null">
        #{phone,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>

  <update id="update" parameterType="com.learning.cloud.user.teacher.entity.Teacher">
    update user_teacher
    <set>
      <if test="teacherName != null">
        teacher_name = #{teacherName,jdbcType=VARCHAR},
      </if>
      <if test="campusId != null">
        campus_id = #{campusId,jdbcType=INTEGER},
      </if>
      <if test="classIds != null">
        class_ids = #{classIds,jdbcType=VARCHAR},
      </if>
      <if test="schoolId != null">
        school_id = #{schoolId,jdbcType=INTEGER},
      </if>
      <if test="bureauId != null">
        bureau_id = #{bureauId,jdbcType=INTEGER},
      </if>
      <if test="courseType != null">
        course_type = #{courseType,jdbcType=BIGINT},
      </if>
      <if test="phone != null">
        phone = #{phone,jdbcType=VARCHAR},
      </if>
      <if test="avatar != null">
        avatar = #{avatar,jdbcType=VARCHAR},
      </if>
    </set>
    <where>
      <if test="userId != null">
        user_id = #{userId,jdbcType=VARCHAR}
      </if>
      <if test="id != null">
        and id = #{id,jdbcType=INTEGER}
      </if>
    </where>
  </update>

  <select id="getTeacherIds" parameterType="java.lang.Long" resultType="com.learning.cloud.user.teacher.entity.Teacher">
    select ut.* from
    (
    SELECT ec.id from edu_campus ec
    LEFT JOIN edu_school es
    on ec.school_id = es.id
    where es.id = #{schoolId}
    ) as ca
    LEFT JOIN user_teacher ut
    on ut.campus_id = ca.id
  </select>
</mapper>
