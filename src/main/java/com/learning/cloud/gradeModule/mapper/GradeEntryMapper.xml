<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learning.cloud.gradeModule.dao.GradeEntryDao">

  <select id="getById" parameterType="java.lang.Long" resultType="com.learning.cloud.gradeModule.entity.GradeEntry">
      select *
      from grade_entry
      where id = #{id}
      limit 1
   </select>

  <select id="getByGradeEntry" parameterType="com.learning.cloud.gradeModule.entity.GradeEntry" resultType="com.learning.cloud.gradeModule.entity.GradeEntry">
    select *
    from grade_entry
    <where>
      <if test="id != null">
        and id = #{id,jdbcType=BIGINT}
      </if>
      <if test="moduleId != null">
        and module_id = #{moduleId,jdbcType=BIGINT}
      </if>
      <if test="studentId != null">
        and student_id = #{studentId,jdbcType=INTEGER}
      </if>
      <if test="studentName != null">
        and student_name = #{studentName,jdbcType=VARCHAR}
      </if>
      <if test="classId != null">
        and class_id = #{classId,jdbcType=INTEGER}
      </if>
    </where>
  </select>

  <select id="getAllGradeEntry" parameterType="com.learning.cloud.gradeModule.entity.GradeEntry" resultType="com.learning.cloud.gradeModule.entity.GradeEntry">
    select *
    from grade_entry
    where classId = #{classId}
    and module_id = #{moduleId}
  </select>
  
  <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.learning.cloud.gradeModule.entity.GradeEntry">
    insert into grade_entry
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="moduleId != null">
        module_id,
      </if>
      <if test="studentId != null">
        student_id,
      </if>
      <if test="studentName != null">
        student_name,
      </if>
      <if test="remark != null">
        remark,
      </if>
      <if test="marks != null">
        marks,
      </if>
      <if test="classId != null">
        class_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=BIGINT},
      </if>
      <if test="moduleId != null">
        #{moduleId,jdbcType=BIGINT},
      </if>
      <if test="studentId != null">
        #{studentId,jdbcType=INTEGER},
      </if>
      <if test="studentName != null">
        #{studentName,jdbcType=VARCHAR},
      </if>
      <if test="remark != null">
        #{remark,jdbcType=VARCHAR},
      </if>
      <if test="marks != null">
        #{marks,jdbcType=LONGVARCHAR},
      </if>
      <if test="classId != null">
        #{classId,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>

  <update id="update" parameterType="com.learning.cloud.gradeModule.entity.GradeEntry">
    update grade_entry
    <set>
      <if test="remark != null">
        remark = #{remark,jdbcType=VARCHAR},
      </if>
      <if test="marks != null">
        marks = #{marks,jdbcType=LONGVARCHAR},
      </if>
    </set>
    where id = #{id}
  </update>

  <select id="getClassStrsInModule" parameterType="java.lang.Long" resultType="java.lang.String">
    select class_id
    from grade_module
    where module_id = #{moduleId}
    group by class_id
  </select>
</mapper>
