<mapper namespace="com.learning.cloud.news.dao.NewsDao">
  <select id="getNewsById" parameterType="java.lang.Long" resultType="com.learning.cloud.news.entity.News">
    select *
    from news
    where id = #{id}
    limit 1
  </select>

  <select id="getAllNews" parameterType="com.learning.cloud.news.entity.News" resultType="com.learning.cloud.news.entity.News">
    select *
    from news
    where status = 1
    order by upload_time desc
  </select>

  <update id="removeNewsById" parameterType="java.lang.Long">
    update news
    set status = 0
    where id = #{id}
  </update>

  <delete id="deleteNewsById" parameterType="java.lang.Long">
    delete from news
    where id = #{id}
  </delete>

