  <select id="getCampus" parameterType="com.learning.cloud.dept.campus.entity.Campus" resultType="com.learning.cloud.dept.campus.entity.Campus">
    select *
    from edu_campus
    where school_id = #{schoolId}
    and campus_name = #{campusName}
